---
import { getSlugFromPathname } from '../utils/helpers';

interface Props {
    project: any
}

const { project } = Astro.props

const url = '/projects/' + getSlugFromPathname(project.file);

---

<article class="p-12">
    <a href={url} class="flex flex-col gap-2 overflow-hidden rounded-xl border">
        <div>
            <img src={project.frontmatter.imageUrl} class="hover:scale-110 transition-transform"/>
        </div>
        <div class="p-2">
        <h1 class="text-2xl mb-2">
            {project.frontmatter.title}
        </h1>

        {project.frontmatter.description && <p>{project.frontmatter.description}</p>}
            <button class="p-2 bg-slate-800 rounded-xl text-white hover:bg-opacity-80 w-3/4 my-3">Show more</button>
        </div>
    </a>
</article>