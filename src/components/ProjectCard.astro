---
import { getSlugFromPathname } from '../utils/helpers';
import Layout from '../layouts/Layout.astro';

interface Props {
    project: any
}

const { project } = Astro.props

const url = '/projects/' + getSlugFromPathname(project.file);

---

<Layout title={project.frontmatter.title}>
    <a href={url}>
        <article class="">
            <h1 class="text-2xl">
                {project.frontmatter.title}
            </h1>

            {project.frontmatter.description && <p>{project.frontmatter.description}</p>}
            <button class="p-2 bg-slate-800 rounded-xl text-white hover:bg-opacity-80">Show more</button>
        </article>
    </a>
</Layout>