---
import Layout from "../../layouts/Layout.astro";
import ProjectCard from '../../components/ProjectCard.astro';

const data = await Astro.glob('../../content/projects/*.md');


---

<Layout title="Projects list">
    <h2 class="text-2xl">Projects list</h2>
    <div class="grid grid-cols-3">
        {data.map(p => <ProjectCard project={p} />)}
    </div>
    <div class="py-8">
        <a href="/" class="hover:text-blue-400">{"<- Back to Home"}</a>
    </div>
</Layout>